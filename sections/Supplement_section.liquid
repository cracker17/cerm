<div class="section middle_banner" style="background: {{ section.settings.color }}">
  <div class="contain">
    <div class="skin_banner">
      <div class="supplent_content">
        {% if section.settings.heading != blank %}
        <p class="heading_sup">{{ section.settings.heading }}</p>
        {% endif %}
        {% if section.settings.title != blank %}
        <a class="btn_sup" href="{{ section.settings.url }}">{{ section.settings.title }}</a>
        {% endif %}
      </div>
      <div class="supplement_img">
        {% if section.settings.image != blank %}
        <img class="only_desktop" src="{{ section.settings.image | img_url: '' }}">
        {% endif %}
        {% if section.settings.image_mob != blank %}
        <img class="only_mobile" src="{{ section.settings.image_mob | img_url: '' }}">
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Supplements Section",
    "settings": [
		{
			"type": "color",
			"id": "color",
			"label": "Background Color",
			"default": "#ffffff"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Choose Image"
		},
		{
			"type": "image_picker",
			"id": "image_mob",
			"label": "Choose mobile image"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Button Label"
		},
		{
			"type": "url",
			"id": "url",
			"label": "Button link"
		}
	],
	"presets": [
		{
			"name": "Supplements Section"
		}
	]
  }
{% endschema %}

