<style>
#custom_div {display: flex;flex-direction: row;flex-wrap: nowrap;background-color: #F0D1BF; width:100%;}
#custom_div > div {height: 100%;padding: 50px;margin-top: 50px;margin-bottom: 50px; }
#custom_div > p {display: block; margin:80px;}
#custom_div > h4 {display: block; margin:80px;}
@media only screen and (max-width: 767px) {#custom_div { display:block;}}
</style>
<div class="section ethics_research">
  <div class="contain">
    <div class="ethics_header">
      {% if section.settings.heading != blank %}
      <p class="heading_text">{{ section.settings.heading }}</p>
      {% endif %}
      {% if section.settings.content != blank %}
      <p class="content_text">{{ section.settings.content }}</p>
      {% endif %}
    </div>
    <div class="ethics_qualities">
      <div class="quality_row">
        <div class="inner_qlt slide_quality row">
          {% for block in section.blocks %}
          <div class="quality_box col-md-4">
            <div class="figure_img">
              {% if block.settings.image != blank %}
              <img class="img_ethics" src="{{ block.settings.image | img_url: '' }}">
              {% endif %}
              <div class="figure_caption">
                <div class="position-relative">
                  <div class="bg-transition"></div>
                  <div class="position_content">
                    {% if block.settings.anim_heading != blank %}
                    <h2 class="anim_heading">{{ block.settings.anim_heading }}</h2>
                    {% endif %}
                    {% if block.settings.anim_caption != blank %}
                    <p>{{ block.settings.anim_caption }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Ethics & Ethos",
    "class": "ethics_section",
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Add Heading"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Add Content"
        }
    ],
    "blocks": [
        {
          "type": "quality",
          "name": "Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Choose Image"
            },
            {
              "type": "text",
              "id": "anim_heading",
              "label": "Add Heading"
            },
            {
              "type": "text",
              "id": "anim_caption",
              "label": "Add Content"
            }
          ]
        }
    ],
    "presets": [
      {
        "name": "Ethics Section"
      }
    ]
  }
{% endschema %}

